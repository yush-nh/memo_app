<form action="/memos/<%= params[:id] %>" method="post">
  <div>
    <label>タイトル</label><br>
    <input type="text" name="title" value="<%= escape_html(@memo['title']) %>">
  </div>
  <div>
    <label>内容</label><br>
    <textarea name="content" cols="50" rows="5"><%= escape_html(@memo['content']) %></textarea>
  </div>
  <input type="hidden" name="_method" value="patch">
  <input type="submit" value="保存">
</form>

<a href="/memos">メモ一覧に戻る</a>
